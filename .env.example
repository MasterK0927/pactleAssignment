# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pactle_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Checkout Redirect URLs (backend will verify and then forward to frontend)
CHECKOUT_SUCCESS_URL=http://localhost:3000/api/payments/success?session_id={CHECKOUT_SESSION_ID}
CHECKOUT_CANCEL_URL=http://localhost:3000/api/payments/cancel

# Logging
LOG_LEVEL=info

# Business Rules
DEFAULT_MATERIAL_CORRUGATED=PP
DEFAULT_GAUGE_PVC=L
DEFAULT_VALIDITY_DAYS=30
DEFAULT_LEAD_TIME_DAYS=7
DEFAULT_GST_PERCENT=18

# Freight Rules
FREIGHT_THRESHOLD=50000
FREIGHT_AMOUNT_BELOW_THRESHOLD=1000
FREIGHT_AMOUNT_ABOVE_THRESHOLD=0

# SKU Mapping Thresholds
SKU_MAPPING_THRESHOLD=0.7
SKU_MAPPING_MARGIN_THRESHOLD=0.1
SIZE_TOLERANCE_MM=2

# File Paths
PRICE_MASTER_PATH=./data/price_master.csv
TAX_DATA_PATH=./data/taxes_v2.csv
ALIAS_DATA_PATH=./data/sku_alias.csv
